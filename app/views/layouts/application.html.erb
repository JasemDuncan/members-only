<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg-dark"> 
    <div class="notification is-primary global-notification text-light text-center">      
       <%= error_flashes %>
    </div>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to  "Members Only!", root_path, class: "navbar-brand" %>        
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <% if usuario_signed_in?%>
            <li class="nav-item">
              <%= link_to "Create a Post", new_post_path,  class: "nav-link text-dark" %>
            </li>            
            <li class="nav-item ">                        
              <%= registration_and_session_links %>  
            </li>
            <li class="nav-item">
              <%= link_to  "Edit", edit_usuario_registration_path, class: "nav-link text-dark" %>
            </li>  
          <% else %>
            <li class="nav-item">            
              <%= registration_and_session_links %>            
            </li>
            <li class="nav-item">              
              <%= signed_in_link %>  
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
